<div class="container-fluid" >
  <div class="card login-card">
    <div class="row">
      <div class="col-md-5">
        <img src="/user-login-bg.png" alt="login" class="login-card-img">
      </div>
      <div class="col-md-7">
        <div class="card-body-login">
          <div class="brand-wrapper d-flex">
            <img src="/best-icon1.png" alt="logo" class="logo" width="50">
            <p class="h2"> BEST</p>
          </div>
          <p class="login-card-description">Change your password</p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, class:"sr-only" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"************" %>
              </div>

              <div class="form-group mb-4">
                <%= f.label :password_confirmation, class:"sr-only" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "confirm-new-password", class:"form-control", placeholder:"************" %>
              </div>

              <div class="form-group mb-4">
                <%= f.submit "Change my password", class:"btn login-btn" %>
              </div>
            <% end %>
            
            <%= render "partials/links" %>
        </div>
      </div>
    </div>
  </div>
</div>